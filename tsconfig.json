{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@mcp/*": [
        "./packages/*/src"
      ],
      "@app/*": ["./apps/*"]
}
  },
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/test",
    "**/*.spec.ts"
  ]
}